<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinMarkCalculator.pages.NewMarkPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="newMarkValueEntry" Placeholder="Nová známka" />
            <Entry x:Name="newMarkWeightEntry" Placeholder="Celočíselná váha nové známky" />
            <Button x:Name="newMarkButton" Text="Uložit novou známku" Clicked="NewMarkButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>